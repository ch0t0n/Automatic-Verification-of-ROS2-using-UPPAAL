<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.

chan approach, exi, lower, raise;

</declaration>
	<template>
		<name>Gate</name>
		<declaration>
clock z;</declaration>
		<location id="id0" x="-110" y="-263">
			<name x="-120" y="-297">up</name>
		</location>
		<location id="id1" x="85" y="-263">
			<name x="51" y="-323">comingdown</name>
			<label kind="invariant" x="68" y="-297">z &lt;= 1</label>
		</location>
		<location id="id2" x="85" y="-119">
			<name x="110" y="-119">down</name>
		</location>
		<location id="id3" x="-110" y="-119">
			<name x="-144" y="-102">comingup</name>
			<label kind="invariant" x="-136" y="-85">z &lt;= 1</label>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id3"/>
			<target ref="id0"/>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-34" y="-144">raise?</label>
			<label kind="assignment" x="-34" y="-119">z := 0</label>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id2"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-42" y="-289">lower?</label>
			<label kind="assignment" x="-42" y="-263">z := 0</label>
			<nail x="59" y="-263"/>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Train</name>
		<declaration>// Place local declarations here.

clock x;</declaration>
		<location id="id4" x="-204" y="0">
			<name x="-214" y="-34">far</name>
		</location>
		<location id="id5" x="8" y="-17">
			<name x="8" y="-68">near</name>
			<label kind="invariant" x="0" y="-51">x &lt;= 5</label>
		</location>
		<location id="id6" x="-76" y="136">
			<name x="-76" y="153">in</name>
			<label kind="invariant" x="-93" y="170">x &lt;= 5</label>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id6"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="-170" y="76">exi!</label>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id6"/>
			<label kind="guard" x="-25" y="51">x &gt;= 2</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="-136" y="0">approach!</label>
			<label kind="assignment" x="-136" y="-42">x := 0</label>
		</transition>
	</template>
	<template>
		<name>Controller</name>
		<declaration>
clock y;</declaration>
		<location id="id7" x="-76" y="-238">
			<name x="-86" y="-272">zero</name>
		</location>
		<location id="id8" x="34" y="-144">
			<name x="51" y="-161">three</name>
			<label kind="invariant" x="51" y="-144">y &lt;= 1</label>
		</location>
		<location id="id9" x="-170" y="-127">
			<name x="-221" y="-136">one</name>
			<label kind="invariant" x="-229" y="-110">y &lt;= 1</label>
		</location>
		<location id="id10" x="-51" y="-25">
			<name x="-61" y="-59">two</name>
		</location>
		<init ref="id7"/>
		<transition>
			<source ref="id8"/>
			<target ref="id7"/>
			<label kind="guard" x="-17" y="-212">y == 1</label>
			<label kind="synchronisation" x="-17" y="-229">raise!</label>
		</transition>
		<transition>
			<source ref="id10"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="8" y="-85">exi?</label>
			<label kind="assignment" x="8" y="-68">y := 0</label>
		</transition>
		<transition>
			<source ref="id9"/>
			<target ref="id10"/>
			<label kind="guard" x="-153" y="-85">y==1</label>
			<label kind="synchronisation" x="-153" y="-68">lower!</label>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="-195" y="-212">approach?</label>
			<label kind="assignment" x="-178" y="-195">y := 0</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
ProcessTrain = Train();
ProcessController = Controller();
ProcessGate = Gate();
// List one or more processes to be composed into a system.
system ProcessTrain, ProcessController, ProcessGate;


    </system>
	<queries>
		<query>
			<formula>A[]!(ProcessTrain.in &amp;&amp; ProcessGate.up)</formula>
			<comment>In every path, it is not the case that the train is in but the gate is up.

A G !(Train.in &amp;&amp; Gate.up)</comment>
		</query>
	</queries>
</nta>
